<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>js_function_arrow_test</title>
</head>
<body>
	<script type="text/javascript">
		const myfunc = function() {
			return "화살표함수연습(화살표함수 전의 일반표현식)";
		}
		let result1 = myfunc();
		console.log(result1);
		
		//화살표함수이용 - function키워드 생략
		const myfunc2 = function(){
			return "화살표함수연습(화살표함수에서 function키워드 없애기)";
		}
		let result2 = myfunc2();
		console.log(result2);
		
		//화살표함수이용 - 함수내부에서 실행할 명령어가 리턴 한 줄인 경우
		//function 키워드 {}, return 키워드를 없앨 수 있다.
		const myfunc3 = ()=>"화살표함수연습(롸살표함수전의 일반표현식)";
		let result3 = myfunc3();
		console.log(result3);
	</script>

</body>
</html>